<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context="com.erfanatic.philosophyexpress.MainActivity">
    <include layout="@layout/tool_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="0dp"
        android:padding="10dp"
        android:text="@string/quote_mainscreen_socrates"
        android:textSize="15sp"
        />
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:id="@+id/category_container"
        android:orientation="horizontal"
        android:background="#FFA7A99B"
        android:gravity="center"

        tools:context="com.erfanatic.philosophyexpress.MainActivity">


        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:id="@+id/ib_logic"
            android:src="@drawable/logicfont"
            android:scaleType="centerInside"
            android:background="#8c8c84"
            android:padding="20dp"


            />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/ib_epistemo"
            android:src="@drawable/epistemologyfont"
            android:scaleType="centerInside"
            android:background="#8c8c84"


            />
    </LinearLayout>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:id="@+id/category_container2"
        android:background="#FFA7A99B"
        android:gravity="center"

        tools:context="com.er fanatic.philosophyexpress.MainActivity"
        >

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"

            android:id="@+id/ib_metaphysics"
            android:background="#413f3a"
            android:text="Metaphysics"
            android:textSize="20sp"
            android:textAlignment="center"

           />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/ib_axiology"
            android:background="#413f3a"
            android:text="Axiology"
            android:textSize="28sp"
            android:textAlignment="center"

            />

    </LinearLayout>

</LinearLayout>
